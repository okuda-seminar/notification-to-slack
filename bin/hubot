#!/bin/sh

set -e

npm install
export PATH="node_modules/.bin:node_modules/hubot/node_modules/.bin:$PATH"

source ./.env
export HUBOT_SLACK_TOKEN=$HUBOT_SLACK_TOKEN
export HUBOT_GITHUB_TOKEN=$HUBOT_GITHUB_TOKEN
export HUBOT_GITHUB_USER=$HUBOT_GITHUB_USER
exec node_modules/.bin/hubot --name "myhubot" "$@"
#forever start -x -c coffee node_modules/.bin/hubot --name "myhubot" "$@" --adapter slack
